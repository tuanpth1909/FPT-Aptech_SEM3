<Page x:ConnectionId='1'
    x:Class="U49.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U49"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:U49.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='13' Name="HambugerButton"
                    RelativePanel.AlignLeftWithPanel="True"
                                                
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE700;"/>
            <Button x:ConnectionId='14' Name="BackButton"
                    RelativePanel.RightOf="HambugerButton"
                                            
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE0A6;"/>
            <AutoSuggestBox x:ConnectionId='15' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for sounds"
                            Width="200"
                            QueryIcon="Find"
                            Margin="0, 5, 10, 0"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>

        <SplitView x:ConnectionId='2' Grid.Row="1" Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="45"
                   OpenPaneLength="200">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItemsListView"
                          IsItemClickEnabled="True"
                                                          
                                                                 >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                <Image x:ConnectionId='6'                           
                                       Height="35"
                                       Width="35"
                                       Margin="-10, 10, 0, 10"/>
                                <TextBlock x:ConnectionId='7'                         
                                           FontSize="18"
                                           Margin="10, 0, 0, 0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            
            <SplitView.Content>
                <Grid Margin="20, 20, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <MediaElement x:ConnectionId='8' Name="MyMediaElement" AutoPlay="True"/>

                    <TextBlock x:ConnectionId='9' x:Name="CategoryTextBlock" Text="All Sound" FontSize="24"/>

                    <GridView x:ConnectionId='10' Grid.Row="1"
                              Name="SoundGridView"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                              AllowDrop="True"
                                                       
                                                               
                                                           
                                                                 >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='12' Name="MyImage" Height="112" Width="101"                            />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
        
    </Grid>
</Page>

