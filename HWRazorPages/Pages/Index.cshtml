@model HWRazorPages.Pages.IndexModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Hello World RazorPage</title>
</head>
<body>
    <h1>@Model.Heading.Message</h1>
    <hr />
    <h2>@Model.SubHeading</h2>
